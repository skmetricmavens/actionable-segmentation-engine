# BigQuery Configuration (for future real data integration)
GCP_PROJECT_ID=your-project-id
BQ_DATASET_EVENTS=your_dataset.events
BQ_DATASET_CUSTOMERS=your_dataset.customers

# LLM Configuration
OPENAI_API_KEY=your-api-key-here
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.2

# Segmentation Configuration
MIN_SEGMENT_SIZE=100
MIN_SEGMENT_CLV=10000
MIN_ROI=2.0
MIN_ROBUSTNESS_SCORE=0.5

# Feature Flags
ENABLE_FEATURE_SENSITIVITY=true
ENABLE_TIME_WINDOW_SENSITIVITY=true
ENABLE_SAMPLING_SENSITIVITY=false
ENABLE_THRESHOLD_SENSITIVITY=false

# Synthetic Data Configuration
SYNTHETIC_DATA_SEED=42
SYNTHETIC_N_CUSTOMERS=10000
